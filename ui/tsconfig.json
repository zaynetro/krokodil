{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */

    "target": "es2019",
    "module": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",

    "strict": true,

    "noImplicitReturns": true,

    "types": ["preact"],
    "esModuleInterop": true,
    "moduleResolution": "node",

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ]
}
